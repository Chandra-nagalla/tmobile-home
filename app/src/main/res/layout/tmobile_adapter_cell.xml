<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/tmobile_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tmobile_margin_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tmobile_image_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tmobile_margin_large"
        android:layout_marginTop="@dimen/tmobile_margin_large"
        android:layout_marginEnd="@dimen/tmobile_margin_large"
        android:textColor="@color/core_black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tmobile_image" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tmobile_descripton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tmobile_margin_large"
        android:layout_marginTop="@dimen/tmobile_margin_small"
        android:layout_marginEnd="@dimen/tmobile_margin_large"
        android:textColor="@color/core_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tmobile_image_title" />

</androidx.constraintlayout.widget.ConstraintLayout>